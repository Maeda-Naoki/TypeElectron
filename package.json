    "husky": "^3.0.9",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "remark-cli": "^7.0.0",
    "remark-preset-lint-markdown-style-guide": "^2.1.3",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
